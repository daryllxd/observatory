---
import Layout from './Layout.astro';

interface Props {
  title: string;
  date: string;
  description?: string;
}

const { title, date, description } = Astro.props;
---

<Layout title={title} description={description}>
  <article class="max-w-4xl mx-auto">
    <header class="text-center mb-12">
      <h1 class="text-5xl font-bold text-gray-900 mb-6">{title}</h1>
      <div class="flex items-center justify-center text-gray-500 space-x-4">
        <time datetime={date}>{new Date(date).toLocaleDateString()}</time>
        <span>•</span>
        <span>5 min read</span>
      </div>
    </header>
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
    <div class="mt-12 pt-8 border-t">
      <div class="flex justify-center space-x-4">
        <a href="/blog" class="text-blue-600 hover:text-blue-800 font-medium">
          ← Back to all posts
        </a>
      </div>
    </div>
  </article>
</Layout> 