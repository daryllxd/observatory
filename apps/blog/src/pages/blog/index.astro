---
import Layout from '../../layouts/Layout.astro';

const posts = [
  {
    title: "My Weekend",
    description: "A simple weekend reflection",
    date: "2025-06-22",
    slug: "my-weekend",
    layout: "featured"
  },
  {
    title: "The Ultimate Blog Post Checklist",
    description: "A comprehensive guide to creating better, more engaging blog posts",
    date: "2024-03-26",
    slug: "blog-post-checklist",
    layout: "default"
  },
  {
    title: "Getting Started with Astro",
    description: "Learn how to build fast websites with Astro and Tailwind CSS",
    date: "2024-03-15",
    slug: "getting-started-with-astro",
    layout: "default"
  },
  {
    title: "Why I Love Tailwind CSS",
    description: "A deep dive into why Tailwind CSS is my favorite CSS framework",
    date: "2024-03-14",
    slug: "why-i-love-tailwind",
    layout: "default"
  }
];
---

<Layout title="Blog Posts">
  <div class="space-y-8">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Blog Posts</h1>
      <p class="mt-2 text-gray-600">Latest articles and thoughts</p>
    </div>

    <div class="grid gap-8 md:grid-cols-2">
      {posts.map(post => (
        <article class="bg-white rounded-lg shadow-sm overflow-hidden hover:shadow-md transition-shadow">
          <div class="p-6">
            <div class="flex items-center text-sm text-gray-500 mb-2">
              <time datetime={post.date}>{new Date(post.date).toLocaleDateString()}</time>
              {post.layout === 'featured' && (
                <span class="ml-2 px-2 py-1 text-xs font-medium bg-blue-100 text-blue-800 rounded-full">
                  Featured
                </span>
              )}
            </div>
            <h2 class="text-xl font-semibold text-gray-900 mb-2">
              <a href={`/blog/${post.slug}`} class="hover:text-blue-600">
                {post.title}
              </a>
            </h2>
            <p class="text-gray-600">{post.description}</p>
            <div class="mt-4">
              <a href={`/blog/${post.slug}`} class="text-blue-600 hover:text-blue-800 font-medium">
                Read more â†’
              </a>
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</Layout> 
