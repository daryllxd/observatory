{
  "files.associations": {
    "*.mdx": "mdx"
  },
  "[mdx]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "unifiedjs.vscode-mdx",
    "editor.codeActionsOnSave": {
      "source.organizeImports": "never"
    }
  },
  "files.exclude": {
    "**/content/blog/**/*.mdx": false
  },
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["j"],
      "after": ["g", "j"]
    },
    {
      "before": ["k"],
      "after": ["g", "k"]
    }
  ]
}
